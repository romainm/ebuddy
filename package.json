{
    "name": "svelte-app",
    "version": "1.0.0",
    "main": "./src/main.js",
    "scripts": {
        "build": "rollup -c",
        "dev": "rollup -c -w",
        "start": "sirv public",
        "electron": "run-s build pure-electron",
        "pure-electron": "electron .",
        "electron-dev": "run-p dev pure-electron-dev",
        "pure-electron-dev": "NODE_ENV=development electron .",
        "pack": "electron-builder --dir",
        "dist": "electron-builder"
    },
    "build": {
        "appId": "com.rmaurer.buddy",
        "productName": "buddy",
        "linux": {
            "target": [
                "AppImage"
            ]
        }
    },
    "devDependencies": {
        "@rollup/plugin-commonjs": "^11.1.0",
        "@rollup/plugin-node-resolve": "^7.1.3",
        "chokidar": "^3.4.0",
        "electron": "^8.5.1",
        "electron-builder": "^22.6.0",
        "rollup": "^2.10.2",
        "rollup-plugin-livereload": "^1.3.0",
        "rollup-plugin-node-builtins": "^2.1.2",
        "rollup-plugin-node-globals": "^1.4.0",
        "rollup-plugin-svelte": "^5.2.2",
        "rollup-plugin-terser": "^5.3.0",
        "sirv-cli": "^0.4.5",
        "svelte": "^3.22.2"
    },
    "dependencies": {
        "@fortawesome/free-regular-svg-icons": "^5.13.0",
        "chart.js": "^2.9.3",
        "fomantic-ui": "^2.8.4",
        "lokijs": "^1.5.8",
        "moment": "^2.25.3",
        "npm-run-all": "^4.1.5",
        "run-s": "0.0.0",
        "svelte-awesome": "^2.3.0",
        "svelte-spa-router": "^2.1.0"
    }
}
